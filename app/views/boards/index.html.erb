<h1>Recent Boards</h1>

<% if @boards.any? %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>#</th>
      <th>Board Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @boards.each_with_index do |board, index| %>
      <tr>
        <td><%= index + 1 + ((@boards.current_page - 1) * @boards.limit_value) %></td>
        <td><%= link_to board.name, board_path(board) %></td>
        <td><%= board.email %></td>
        <td><%= board.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to 'View', board_path(board), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @boards %> <!-- Pagination controls -->
<% else %>
  <p>No boards have been generated yet.</p>
<% end %>

<%= link_to "Back to Home", root_path, class: "btn btn-secondary mt-3" %>
